<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity">

    <ImageButton
        android:id="@+id/btnCerrarSesion"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="#FFFFFF"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/salirbtn" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="106dp"
        tools:layout_editor_absoluteY="-16dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="240dp"
            android:layout_height="128dp"
            app:srcCompat="@drawable/atizapan" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Noticias AtizapÃ¡n"
            android:textAlignment="center"
            android:textColor="#050000"
            android:textSize="34sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnInundaciones"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:backgroundTint="#FFFDFD"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/inundacionbtn" />

            <ImageButton
                android:id="@+id/btnIncendios"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:backgroundTint="#FFFDFD"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/incendiosbtn" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnClima"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:backgroundTint="#FFFDFD"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/climabtn" />

            <ImageButton
                android:id="@+id/btnTrafico"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:backgroundTint="#FFFDFD"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/traficobtn" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnSismos"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:backgroundTint="#FFFDFD"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/sismosbtn" />

            <ImageButton
                android:id="@+id/btnNoticias"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:backgroundTint="#FFFDFD"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/noticiasbtn" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnSOS"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:backgroundTint="#FFFDFD"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/sos" />

            <ImageButton
                android:id="@+id/btnRecomendaciones"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:backgroundTint="#FFFDFD"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/recomendacionesbtn" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>